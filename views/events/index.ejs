<h1>Your events:</h1>

<% events.forEach(function(event) { %>
  <div class="well">
  <h2><a href="/events/<%= event.id %>"><%= event.type %></a></h2>
  <p>Where: <%= event.location %></p>
  <p>Time: <%= event.time %></p>
  <p>Reason:<%= event.reason %></p>
  <p>With:<%= event.docId %></p>
  <a href="/events/<%= event.id%>/edit">UPDATE EVENT</a>
  <form method= "POST" action= "/events/<%= event.id %>/?_method=DELETE">
<input type="Submit" value="DELETE">
</form>
  </div>

  <% }); %>

  <hr />
  
  
<a href="/events/new">Create a New Event</a>
